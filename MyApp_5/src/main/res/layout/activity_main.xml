<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.MyApp_5.MainActivity">


    <TextView
        android:id="@+id/tv_zagolovok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="45sp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:text="Ваш заказ" />

    <TextView
        android:id="@+id/tv_podzagolovok_Hleb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="80dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="70dp"
        android:text="Хлеб" />

    <RadioGroup
        android:id="@+id/rg1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="140dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="50dp">

        <RadioButton
            android:id="@+id/RB_hleb_beliy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="Белый" />

        <RadioButton
            android:id="@+id/RB_hleb_cherniy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="Черный" />
    </RadioGroup>

    <TextView
        android:id="@+id/tv_podZagolovok_Napitok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="80dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="220dp"
        android:text="Напиток" />

    <RadioGroup
        android:id="@+id/rg2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="140dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="230dp">

        <RadioButton
            android:id="@+id/RB_napitok_chay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="Чай" />

        <RadioButton
            android:id="@+id/RB_napitok_sok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="Сок" />

        <RadioButton
            android:id="@+id/RB_napitok_cola"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="Кола" />
    </RadioGroup>

    <Button
        android:id="@+id/button_otpravit_zakaz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="280dp"
        android:textSize="25sp"
        android:text="Отправить заказ" />

    <TextView
        android:id="@+id/telega"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoLink="web"
        android:background="#ccc"
        android:fontFamily="sans-serif"
        android:text="t.me/PK4U_S"
        android:textColor="#000"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>